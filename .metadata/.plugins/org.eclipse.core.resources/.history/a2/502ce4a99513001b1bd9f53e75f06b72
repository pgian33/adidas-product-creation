package com.adidas.product.creation.client.controller;

import java.util.ArrayList;
import java.util.List;
import java.util.stream.Collectors;

import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Component;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;

import com.adidas.product.creation.client.entity.City;
import com.adidas.product.creation.client.exception.Neo4jQueryException;
import com.adidas.product.creation.client.repository.CityRepository;
import com.adidas.product.creation.model.integration.ShortestPathModel;
import com.adidas.product.creation.model.integration.enumeration.StatusEnumeration;

@Component
@RestController
@RequestMapping(value = "/")
public class RouteController {

	private static final Logger LOGGER = LoggerFactory.getLogger(RouteController.class);

	@Autowired
	private CityRepository cityRepository;

	@RequestMapping(value = "/connections-shortest-path")
	public ShortestPathModel getConnectionsShortestPath(@RequestParam(value="departureCity") String departureCity, @RequestParam(value="destinationCity") String destinationCity) throws Neo4jQueryException {
		LOGGER.trace(">> START getConnectionsShortestPath: departureCity={}, destinationCity={}", departureCity, destinationCity);

		List<City> connectionsShortestPathList = null;
		ShortestPathModel shortestPathModel = new ShortestPathModel();

		if((departureCity == null || departureCity.isEmpty()) || (destinationCity == null || destinationCity.isEmpty())) {
			LOGGER.warn("?? getConnectionsShortestPath: Check input parameters");
			throw new Neo4jQueryException(StatusEnumeration.SERVICE_NO_VALID_INPUT_PARAMETERS.getMessage(), StatusEnumeration.SERVICE_NO_VALID_INPUT_PARAMETERS.getStatus());
		}

		try {
			LOGGER.trace("-- getConnectionsShortestPath - executing query");
			connectionsShortestPathList = cityRepository.getConnetionShortestPath(departureCity, destinationCity);
			if(connectionsShortestPathList != null) { 
				shortestPathModel.setCities(connectionsShortestPathList.stream().map(entry -> entry.getName()).collect(Collectors.toList()));

				if(connectionsShortestPathList.isEmpty()) {
					shortestPathModel.setMessage(StatusEnumeration.SERVICE_NO_RESULTS.getMessage());
					shortestPathModel.setStatus(StatusEnumeration.SERVICE_NO_RESULTS.getStatus());
				}
			}
		}catch (Neo4jQueryException ex) {
			shortestPathModel.setMessage(ex.getReason());
			shortestPathModel.setStatus(ex.getStatus());
		}catch (Exception e) {
			shortestPathModel.setMessage(StatusEnumeration.SERVICE_UNKNOWN_ERROR.getMessage());
			shortestPathModel.setStatus(StatusEnumeration.SERVICE_UNKNOWN_ERROR.getStatus());
		}
		LOGGER.trace("<< END getConnectionsShortestPath: shortestPathModel={}", shortestPathModel);
		return shortestPathModel;
	}

	@RequestMapping(value = "/time-shortest-path")
	public List<String> getTimeShortestPath(@RequestParam(value="departureCity", required=true) String departureCity, @RequestParam(value="destinationCity", required=true) String destinationCity) throws Neo4jQueryException {
		LOGGER.trace(">> START getTimeShortestPath: departureCity={}, destinationCity={}", departureCity, destinationCity);
		
		List<City> timeShortestPathList = null;
		ShortestPathModel shortestPathModel = new ShortestPathModel();
		
		if((departureCity == null || departureCity.isEmpty()) || (destinationCity == null || destinationCity.isEmpty())) {
			LOGGER.warn("?? getConnectionsShortestPath: Check input parameters");
			throw new Neo4jQueryException(StatusEnumeration.SERVICE_NO_VALID_INPUT_PARAMETERS.getMessage(), StatusEnumeration.SERVICE_NO_VALID_INPUT_PARAMETERS.getStatus());
		}
		
		try {
			timeShortestPathList = cityRepository.getTimeShortestPath(departureCity, destinationCity);
		}catch (Throwable e) {
			LOGGER.error("error!!" , e);
		}
		return timeShortestPathList.stream().map(entry -> entry.getName()).collect(Collectors.toList());
	}
}
