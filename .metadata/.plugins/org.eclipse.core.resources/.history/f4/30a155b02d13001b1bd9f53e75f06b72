package com.adidas.product.creation.rest.bean;

import com.fasterxml.jackson.annotation.JsonInclude;

@JsonInclude(JsonInclude.Include.NON_NULL)
public class ApiResponse<T> extends  {

	private T result;
	private ApiError error;

	public ApiResponse(T result) {
		this.result = result;
	}

	public ApiResponse(String errorCode, String errorMessage, String errorDescription) {
		this.error = new ApiError(errorCode, errorMessage, errorDescription);
	}

	public ApiResponse(String errorCode, String errorMessage) {
		this.error = new ApiError(errorCode, errorMessage);
	}

	public ApiResponse(ApiError error) {
		this.error = error;
	}

	public T getResult() {
		return this.result;
	}

	public void setResult(T result) {
		this.result = result;
	}

	public ApiError getError() {
		return this.error;
	}

	public void setError(ApiError error) {
		this.error = error;
	}
}

